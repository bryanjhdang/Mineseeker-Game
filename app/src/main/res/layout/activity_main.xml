<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paw_background"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Cat Seeker"
        android:textColor="@color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="by Bryan Dang and Lynn Nguyen"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/boxCat"
        android:layout_width="177dp"
        android:layout_height="125dp"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTitle"
        app:srcCompat="@drawable/box_sprite" />

    <ImageView
        android:id="@+id/catHead1"
        android:layout_width="63dp"
        android:layout_height="57dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/welcomeTitle"
        app:layout_constraintEnd_toStartOf="@+id/welcomeTitle"
        app:layout_constraintTop_toTopOf="@+id/welcomeTitle"
        app:srcCompat="@drawable/cat_head" />

    <ImageView
        android:id="@+id/catHead2"
        android:layout_width="63dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/welcomeTitle"
        app:layout_constraintStart_toEndOf="@+id/welcomeTitle"
        app:layout_constraintTop_toTopOf="@+id/welcomeTitle"
        app:srcCompat="@drawable/cat_head" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/authors"
        app:srcCompat="@drawable/couple_cats" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/white"
        android:text="Head to Menu!"
        app:circularflow_radiusInDP="0dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>